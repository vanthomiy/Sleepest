<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto">

    <Transition android:id="@+id/transition_1"
                app:constraintSetEnd="@id/state1"
                app:constraintSetStart="@id/empty"
                app:motionInterpolator="easeInOut">
    </Transition>

    <Transition android:id="@+id/transition_2"
            app:constraintSetEnd="@id/state2"
            app:constraintSetStart="@id/state1"
            app:motionInterpolator="easeInOut">
    </Transition>

    <Transition android:id="@+id/transition_3"
            app:constraintSetEnd="@id/state3"
            app:constraintSetStart="@id/state2"
            app:motionInterpolator="easeInOut">
    </Transition>

    <Transition android:id="@+id/transition_4"
            app:constraintSetEnd="@id/empty"
            app:constraintSetStart="@id/state3"
            app:motionInterpolator="easeInOut">
    </Transition>

    <Transition android:id="@+id/transition_5"
            app:constraintSetEnd="@id/state4"
            app:constraintSetStart="@id/empty"
            app:motionInterpolator="easeInOut">
    </Transition>

    <ConstraintSet android:id="@+id/empty">
        <Constraint
                android:id="@+id/frameLayoutState1"
                android:translationY="400dp"
                />
        <Constraint
                android:id="@+id/frameLayoutState2"
                android:translationY="400dp"
                />
        <Constraint
                android:id="@+id/frameLayoutState3"
                android:translationY="400dp"
                />
        <Constraint
                android:id="@+id/frameLayoutState4"
                android:translationY="400dp"
                />
    </ConstraintSet>
    <ConstraintSet android:id="@+id/state1">
        <Constraint
                android:id="@+id/frameLayoutState1"
                android:translationY="0dp"
                android:alpha="1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@+id/guideline"
                app:layout_constraintBottom_toTopOf="@+id/controlLine"/>
        <Constraint
                android:id="@+id/frameLayoutState2"
                android:translationY="400dp"
                android:alpha="0"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@+id/guideline"
                app:layout_constraintBottom_toTopOf="@+id/controlLine"/>
        <Constraint
                android:id="@+id/frameLayoutState3"
                android:translationY="400dp"
                android:alpha="0"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@+id/guideline"
