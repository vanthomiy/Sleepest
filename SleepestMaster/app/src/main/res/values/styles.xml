<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Spinner" parent="Widget.AppCompat.Light.DropDownItem.Spinner">
        <!--item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/valuesHeight</item!-->
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:textColor">@color/primary_text_color</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/valueSize</item>
        <!--item name="android:background">@color/primary_button_color</item!-->
    </style>

    <style name="TimePickerTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:colorAccent">@color/accent_text_color</item>
        <item name="android:windowBackground">@color/primary_app_background</item>
        <item name="android:textColorPrimaryInverse">@color/light_gray</item>
        <item name="android:textColorSecondaryInverse">@color/primary_text_color</item>
        <item name="android:textColorPrimary">@color/tertiary_app_background</item>
        <item name="android:textColorSecondary">@color/tertiary_app_background</item>
        <item name="colorAccent">@color/accent_text_color</item>
    </style>

    <style name="DatePickerTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:colorAccent">@color/accent_text_color</item>
        <item name="android:windowBackground">@color/primary_app_background</item>
        <item name="android:textColorPrimaryInverse">@color/light_gray</item>
        <item name="android:textColorSecondaryInverse">@color/primary_text_color</item>
        <item name="android:textColorPrimary">@color/tertiary_app_background</item>
        <item name="android:textColorSecondary">@color/tertiary_app_background</item>
        <item name="colorAccent">@color/accent_text_color</item>
    </style>

</resources>