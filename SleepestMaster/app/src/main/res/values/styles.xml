    <style name="TimePickerTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:colorAccent">@color/accent_text_color</item>
        <item name="android:windowBackground">@color/primary_app_background</item>
        <item name="android:textColorPrimaryInverse">@color/accent_button_color</item>
        <item name="android:textColorSecondaryInverse">@color/primary_text_color</item>
        <item name="android:textColorPrimary">@color/tertiary_app_background</item>
        <item name="android:textColorSecondary">@color/tertiary_app_background</item>
        <item name="colorAccent">@color/accent_text_color</item>
    </style>

