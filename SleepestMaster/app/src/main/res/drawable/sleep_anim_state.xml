<?xml version="1.0" encoding="utf-8"?>
<animated-selector xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:targetApi="16">

    <!-- provide a different drawable for each state-->
    <item android:id="@+id/state_on"
        android:drawable="@drawable/ic_dark_mode_fill_black_24dp"
        android:state_checked="true"/>

    <item android:id="@+id/state_off"
        android:drawable="@drawable/ic_dark_mode_black_24dp"/>

    <!-- specify transitions -->
    <transition
        android:drawable="@drawable/sleep_regular_filled_anim"
        android:fromId="@id/state_off"
        android:toId="@id/state_on" />

</animated-selector>