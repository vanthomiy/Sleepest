<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:id="@+id/layoutLockscreen"
    style="@style/Theme.AppCompat.DayNight">

    <ImageView
        android:id="@+id/ivSwipeUpArrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:src="@drawable/arrow_swipe_up"
        android:layout_above="@+id/tvSwipeUpText"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Swipe up to cancel"
        android:textColor="@color/accent_text_color"
        android:id="@+id/tvSwipeUpText"
        android:textSize="30dp"
        android:gravity="center_horizontal"
        android:layout_above="@+id/btnSnoozeAlarmLockScreen"
        android:layout_marginBottom="100dp"/>

    <Button
        android:id="@+id/btnSnoozeAlarmLockScreen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/snooze"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>