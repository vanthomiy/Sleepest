<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.alarms.AlarmsInstanceFragment">

    <data>
        <variable
            name="alarmsViewModel"
            type="com.doitstudio.sleepest_master.ui.alarms.AlarmInstanceViewModel"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cL_alarmEntity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cL_alarmEntityInnerLayer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/background_alarmentity"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tV_alarmName"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="@{alarmsViewModel.alarmName}"
                android:textAlignment="center"
                android:textColor="@color/tertiary_text_color"
                android:textSize="28sp"
                android:onClick="@{alarmsViewModel::onAlarmNameClick}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="MissingConstraints" />

            <Switch
                android:id="@+id/sw_alarmIsActive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:thumbTint="@color/secondary_button_color"
                android:trackTint="@color/secondary_button_color"
                android:checked="@={alarmsViewModel.isAlarmActive}"
                android:onClick="@{alarmsViewModel::onAlarmActiveToggled}"
                app:layout_constraintBottom_toBottomOf="@+id/tV_alarmName"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@+id/tV_alarmName"
                app:layout_constraintTop_toTopOf="@+id/tV_alarmName"
                tools:ignore="MissingConstraints,UseSwitchCompatOrMaterialXml" />

            <Button
                android:id="@+id/btn_deleteAlarm"
                android:layout_width="45dp"
                android:layout_height="40dp"
                android:layout_marginStart="8dp"
                android:text="@string/x"
                android:textColor="@color/primary_text_color"
                android:backgroundTint="@color/error_color"
                app:layout_constraintBottom_toBottomOf="@+id/tV_alarmName"
                app:layout_constraintEnd_toStartOf="@+id/tV_alarmName"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tV_alarmName" />

            <TextView
                android:id="@+id/tV_activeWeekdays"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:text=""
                android:textAlignment="viewStart"
                android:textColor="@color/tertiary_text_color"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tV_alarmName"
                android:visibility="@{alarmsViewModel.extendedAlarmEntity == false ? alarmsViewModel.visibleState:alarmsViewModel.goneState, default=gone}"
                />

            <TextView
                android:id="@+id/tV_wakeupRangeHint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:textAlignment="viewStart"
                android:textColor="@color/tertiary_text_color"
                android:textSize="12sp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tV_alarmName"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/tV_sleepAmountHint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:textAlignment="viewStart"
                android:textColor="@color/tertiary_text_color"
                android:textSize="12sp"
                android:visibility="@{alarmsViewModel.extendedAlarmEntity == false ? alarmsViewModel.visibleState:alarmsViewModel.goneState, default=gone}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/tV_wakeupRangeHint"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@+id/tV_activeWeekdays"
                app:layout_constraintTop_toBottomOf="@+id/tV_alarmName"
                />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cL_extendedAlarmEntity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tV_alarmName"
                android:visibility="@{alarmsViewModel.extendedAlarmEntity == true ? alarmsViewModel.visibleState:alarmsViewModel.goneState, default=visible}"
                >
                <TextView
                    android:id="@+id/tV_sleepAmountTopic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:text="@string/schlafdauer"
                    android:textColor="@color/tertiary_text_color"
                    android:textSize="18sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tV_sleepAmountSelection"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/tertiary_text_color"
                    android:textSize="18sp"
                    android:text="@{alarmsViewModel.sleepDurationString}"
                    app:layout_constraintStart_toEndOf="@+id/tV_sleepAmountTopic"
                    app:layout_constraintTop_toTopOf="@+id/tV_sleepAmountTopic" />

                <SeekBar
                    android:id="@+id/sBar_sleepAmount"
                    style="@android:style/Widget.DeviceDefault.Light.SeekBar"
                    android:layout_width="338dp"
                    android:layout_height="28dp"
                    android:max="10"
                    android:min="0"
                    android:progressBackgroundTint="@color/primary_button_color"
                    android:progressTint="@color/secondary_button_color"
                    android:progress="@={alarmsViewModel.sleepDurationValue}"
                    android:onProgressChanged="@{alarmsViewModel::onProgressChanged}"
                    android:thumbTint="@color/secondary_button_color"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tV_sleepAmountTopic" />

                <TextView
                    android:id="@+id/tV_wakeupRangeTopic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="20dp"
                    android:visibility="gone"
                    android:text="@string/aufwachzeitpunkt"
                    android:textColor="@color/tertiary_text_color"
                    android:textSize="18sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/sBar_sleepAmount" />

                <!--TextView
                    android:id="@+id/tV_wakeupRangeSelection"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/tertiary_text_color"
                    android:textSize="18sp"
                    app:layout_constraintStart_toEndOf="@+id/tV_wakeupRangeTopic"
                    app:layout_constraintTop_toTopOf="@+id/tV_wakeupRangeTopic" /!-->

                <FrameLayout
                    android:id="@+id/fL_wakeupRange"
                    android:layout_height="70dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tV_wakeupRangeTopic"
                    android:layout_width="338dp"
                    >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="start"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:layout_gravity="left|top"
                            android:textSize="@dimen/valueSize"
                            android:textColor="@color/accent_text_color"
                            android:textStyle="bold"
                            android:text="@string/sleep_sleeptime_start"
                            />

                        <FrameLayout
                            android:layout_width="150dp"
                            android:layout_height="50dp"
                            android:onClick="@{alarmsViewModel::onAlarmStartClicked}"
                            android:background="@drawable/transparent"
                            android:backgroundTint="@color/secondary_button_color">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center_vertical"
                                android:gravity="center_vertical"
                                android:textSize="@dimen/bigSize"
                                android:textAlignment="center"
                                android:textColor="@color/tertiary_text_color"
                                android:text="@{alarmsViewModel.sleepStartValue}"
                                tools:ignore="RtlCompat" />

                        </FrameLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="end"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:layout_gravity="left|top"
                            android:textSize="@dimen/valueSize"
                            android:textColor="@color/accent_text_color"
                            android:textStyle="bold"
                            android:text="@string/sleep_sleeptime_end"
                            />

                        <FrameLayout
                            android:layout_width="150dp"
                            android:layout_height="50dp"
                            android:onClick="@{alarmsViewModel::onAlarmEndClicked}"
                            android:background="@drawable/transparent"
                            android:backgroundTint="@color/secondary_button_color">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center_vertical"
                                android:gravity="center_vertical"
                                android:textSize="@dimen/bigSize"
                                android:textAlignment="center"
                                android:textColor="@color/tertiary_text_color"
                                android:text="@{alarmsViewModel.sleepEndValue}"
                                tools:ignore="RtlCompat" />

                        </FrameLayout>
                    </LinearLayout>

                </FrameLayout>

                <Button
                    android:id="@+id/btn_selectActiveWeekday"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginTop="5dp"
                    android:text="@string/active_Weekdays"
                    android:textColor="@color/primary_text_color"
                    android:backgroundTint="@color/secondary_button_color"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/fL_wakeupRange"
                    tools:layout_constraintStart_toEndOf="@+id" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
