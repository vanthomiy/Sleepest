    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/blueviolet"
            android:onClick="@{sleepViewModel::onEditSleepSettings}"
            android:orientation="vertical">




            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:minHeight="45dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Your Sleep-Times"
                    android:fontFamily="@font/roboto_medium"
                    android:textSize="17dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/white"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_gravity="end"
                    android:layout_marginEnd="10dp"
                    android:width="200dp"
                    android:background="@drawable/bg"
                    android:clickable="false"
                    android:visibility="@{sleepViewModel.sleepSettingsNotExpanded, default=gone}"
                    android:text="@{sleepViewModel.sleepCompleteValue}" />

            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:fontFamily="@font/roboto"
                android:text="During this period, the app will monitor your behavior and use it to recognize your sleep and set an alarm clock"
                android:textColor="@color/white"
                android:visibility="@{sleepViewModel.sleepSettingsExpanded, default=visible}" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:visibility="@{sleepViewModel.sleepSettingsExpanded, default=visible}"
                android:minHeight="45dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:text="to"
                    android:textColor="@color/white" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_gravity="start"
                    android:layout_marginStart="10dp"
                    android:width="150dp"
                    android:background="@drawable/bg"
                    android:onClick="@{sleepViewModel.onAlarmStartClicked}"
                    android:text="@{sleepViewModel.sleepStartValue}" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:width="150dp"
                    android:layout_gravity="end"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/bg"
                    android:onClick="@{sleepViewModel.onAlarmEndClicked}"
                    android:text="@{sleepViewModel.sleepEndValue}" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:minHeight="45dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Desired duration of sleep"
                    android:textSize="17dp"
                    android:fontFamily="@font/roboto_medium"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/white"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:width="125dp"
                    android:layout_gravity="end"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/bg"
                    android:visibility="@{sleepViewModel.sleepSettingsNotExpanded, default=gone}"
                    android:text="@{sleepViewModel.sleepDurationString}" />

            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="The length of sleep you want to sleep by default. You can adjust this individually for each alarm clock later"
                android:layout_marginHorizontal="10dp"
                android:fontFamily="@font/roboto"
                android:visibility="@{sleepViewModel.sleepSettingsExpanded, default=visible}"
                android:textColor="@color/white"/>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:visibility="@{sleepViewModel.sleepSettingsExpanded, default=visible}"
                android:orientation="horizontal">

                <SeekBar
                    android:id="@+id/seekBar"
                    android:layout_width="217dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:max="40"
                    android:onProgressChanged="@{sleepViewModel.onSleepDurationChanged}"
                    android:progress="@={sleepViewModel.sleepDurationValue}" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:width="125dp"
                    android:layout_gravity="end"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/bg"
                    android:text="@{sleepViewModel.sleepDurationString}" />

            </FrameLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginVertical="10dp"
            android:background="@color/white"
            android:clickable="true"
            android:orientation="vertical"
            android:onClick="@{sleepViewModel.onHideSleepSettings}">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="@font/roboto_medium"
                    android:text="Sleep analyse"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <Button
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_marginEnd="10dp"
                    android:layout_alignParentEnd="true"
                    android:background="@drawable/bgroundedchoosen"
                    android:backgroundTint="@color/black"
                    android:text="Y" />

                <Button
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_marginEnd="65dp"
                    android:layout_alignParentEnd="true"
                    android:background="@drawable/bgrounded"
                    android:text="M" />

                <Button
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_marginEnd="120dp"
                    android:layout_alignParentEnd="true"
                    android:background="@drawable/bgrounded"
                    android:text="W" />

            </RelativeLayout>

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/sleepTimeChart"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_margin="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

            </com.github.mikephil.charting.charts.LineChart>
        </LinearLayout>


    </LinearLayout>



</layout>