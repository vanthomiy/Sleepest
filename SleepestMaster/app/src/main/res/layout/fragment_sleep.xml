<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.sleep.SleepFragment">

    <data>
        <variable
            name="sleepViewModel"
            type="com.doitstudio.sleepest_master.ui.sleep.SleepViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="15dp"
            android:layout_marginVertical="30dp"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/startTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:width="150dp"
                    android:height="45dp"
                    android:background="@drawable/bg"
                    android:onClick="@{sleepViewModel.onAlarmStartClicked}"
                    android:text="@{sleepViewModel.sleepStartValue}" />

                <Button
                    android:id="@+id/endTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:width="150dp"
                    android:height="45dp"
                    android:background="@drawable/bg"
                    android:onClick="@{sleepViewModel.onAlarmEndClicked}"
                    android:text="@{sleepViewModel.sleepEndValue}" />

            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/bgtransparentsmall"
                android:minHeight="45dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvSleepTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="20dp"
                    android:text="@{sleepViewModel.sleepDurationString}"
                    android:textSize="20sp" />

                <SeekBar
                    android:id="@+id/sbSleepTime"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:progress="@={sleepViewModel.sleepDurationValue}"
                    android:onProgressChanged="@{sleepViewModel::onSleepDurationChanged}"
                    android:max="40"
                    android:min="0"
                    android:layout_marginStart="10dp" />


            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/bgtransparentsmall"
                android:minHeight="45dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="20dp"
                    android:text="Phone placement"
                    android:textSize="15sp" />

                <ToggleButton
                    android:layout_width="100dp"
                    android:layout_height="45dp"
                    android:layout_gravity="right"
                    android:background="@drawable/bg"
                    android:gravity="center_vertical"
                    android:textAlignment="center"
                    android:checked="@={sleepViewModel.onTableValue}"
                    android:onClick="@{sleepViewModel.onTableValueChanged}"
                    android:textOff="on table"
                    android:textOn="in bed"
                    tools:ignore="RtlCompat" />


            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/bgtransparentsmall"
                android:minHeight="45dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="20dp"
                    android:text="@{sleepViewModel.phoneUsageString}"
                    android:textSize="15sp" />

                <!--SeekBar
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="-18dp"
                    android:max="5"
                    android:onProgressChanged="@{sleepViewModel::onPhoneUsageChanged}"
                    android:progressDrawable="@drawable/seekbar_style"
                    android:thumb="@drawable/custom_thumb" /!-->

                <SeekBar
                    style="@style/Widget.AppCompat.SeekBar.Discrete"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:max="10"
                    android:progress="3" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">


            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </androidx.core.widget.NestedScrollView>


        </LinearLayout>

    </LinearLayout>


</layout>