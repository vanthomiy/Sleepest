<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.motion.widget.MotionLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/motionLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layoutDescription="@xml/alarm_swipe_scene"
    tools:context=".alarmclock.LockScreenExtendedFragment">

    <ImageView
        android:id="@+id/arrow_right"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@drawable/ic_fi_rr_alarm_clock"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <ImageView
        android:id="@+id/arrow_up"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@drawable/ic_fi_rr_alarm_clock"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <View
        android:id="@+id/dial_pad"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:background="@color/error_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="parent" />

    <Button
        android:id="@+id/button1"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:background="@color/secondary_app_background"
        app:layout_constraintEnd_toStartOf="@id/button2"
        app:layout_constraintStart_toStartOf="@id/dial_pad"
        app:layout_constraintTop_toTopOf="@id/button2" />

    <Button
        android:id="@+id/button2"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:background="@color/tertiary_app_background"
        app:layout_constraintEnd_toStartOf="@id/button3"
        app:layout_constraintStart_toEndOf="@id/button1"
        app:layout_constraintTop_toTopOf="@id/button3" />

    <Button
        android:id="@+id/button3"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:text="1"
        app:layout_constraintBottom_toTopOf="@id/button6"
        app:layout_constraintEnd_toEndOf="@id/dial_pad"
        app:layout_constraintStart_toEndOf="@id/button2"
        app:layout_constraintTop_toTopOf="@id/dial_pad" />

    <Button
        android:id="@+id/button4"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:text="2"
        app:layout_constraintEnd_toStartOf="@id/button5"
        app:layout_constraintStart_toStartOf="@id/dial_pad"
        app:layout_constraintTop_toTopOf="@id/button5" />

    <Button
        android:id="@+id/button5"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:text="3"
        app:layout_constraintEnd_toStartOf="@id/button6"
        app:layout_constraintStart_toEndOf="@id/button4"
        app:layout_constraintTop_toTopOf="@id/button6" />

    <Button
        android:id="@+id/button6"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:text="4"
        app:layout_constraintBottom_toTopOf="@id/button9"
        app:layout_constraintEnd_toEndOf="@id/dial_pad"
        app:layout_constraintStart_toEndOf="@id/button5"
        app:layout_constraintTop_toBottomOf="@id/button3" />

    <Button
        android:id="@+id/button7"
        android:layout_width="64dp"
        android:layout_height="64dp"
        app:layout_constraintEnd_toStartOf="@id/button8"
        app:layout_constraintStart_toStartOf="@id/dial_pad"
        app:layout_constraintTop_toTopOf="@id/button8" />

    <Button
        android:id="@+id/button8"
        android:layout_width="64dp"
        android:layout_height="64dp"
        app:layout_constraintEnd_toStartOf="@id/button9"
        app:layout_constraintStart_toEndOf="@id/button7"
        app:layout_constraintTop_toTopOf="@id/button9" />

    <Button
        android:id="@+id/button9"
        android:layout_width="64dp"
        android:layout_height="64dp"
        app:layout_constraintBottom_toTopOf="@id/button12"
        app:layout_constraintEnd_toEndOf="@id/dial_pad"
        app:layout_constraintStart_toEndOf="@id/button8"
        app:layout_constraintTop_toBottomOf="@id/button6" />

    <Button
        android:id="@+id/button10"
        android:layout_width="64dp"
        android:layout_height="64dp"

        app:layout_constraintEnd_toStartOf="@id/button11"
        app:layout_constraintStart_toStartOf="@id/dial_pad"
        app:layout_constraintTop_toTopOf="@id/button11" />

    <Button
        android:id="@+id/button11"
        android:layout_width="64dp"
        android:layout_height="64dp"

        app:layout_constraintEnd_toStartOf="@id/button12"
        app:layout_constraintStart_toEndOf="@id/button10"
        app:layout_constraintTop_toTopOf="@id/button12" />

    <Button
        android:id="@+id/button12"
        android:layout_width="64dp"
        android:layout_height="64dp"
        app:layout_constraintBottom_toBottomOf="@id/dial_pad"
        app:layout_constraintEnd_toEndOf="@id/dial_pad"
        app:layout_constraintStart_toEndOf="@id/button11"
        app:layout_constraintTop_toBottomOf="@id/button9" />

    <View
        android:id="@+id/people_pad"
        android:layout_width="300dp"
        android:layout_height="500dp"
        android:layout_marginStart="4dp"
        android:background="@color/colorAccent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.utils.widget.ImageFilterButton
        android:id="@+id/people1"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginStart="8dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_settings_black_24dp"
        app:layout_constraintBottom_toTopOf="@id/people3"
        app:layout_constraintEnd_toStartOf="@id/people2"
        app:layout_constraintStart_toStartOf="@id/people_pad"
        app:layout_constraintTop_toTopOf="@id/people_pad" />

    <androidx.constraintlayout.utils.widget.ImageFilterButton
        android:id="@+id/people2"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginEnd="8dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_settings_black_24dp"
        app:layout_constraintBottom_toTopOf="@id/people4"
        app:layout_constraintEnd_toEndOf="@id/people_pad"
        app:layout_constraintStart_toEndOf="@id/people1"
        app:layout_constraintTop_toTopOf="@id/people_pad" />

    <androidx.constraintlayout.utils.widget.ImageFilterButton
        android:id="@+id/people3"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginStart="8dp"
        android:src="@drawable/ic_settings_black_24dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toTopOf="@id/people5"
        app:layout_constraintEnd_toStartOf="@id/people4"
        app:layout_constraintStart_toStartOf="@id/people_pad"
        app:layout_constraintTop_toBottomOf="@id/people1" />

    <androidx.constraintlayout.utils.widget.ImageFilterButton
        android:id="@+id/people4"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/ic_settings_black_24dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toTopOf="@id/people6"
        app:layout_constraintEnd_toEndOf="@id/people_pad"
        app:layout_constraintStart_toEndOf="@id/people3"
        app:layout_constraintTop_toBottomOf="@id/people2" />

    <androidx.constraintlayout.utils.widget.ImageFilterButton
        android:id="@+id/people5"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginStart="8dp"
        android:src="@drawable/ic_settings_black_24dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toTopOf="@id/people7"
        app:layout_constraintEnd_toStartOf="@id/people6"
        app:layout_constraintStart_toStartOf="@id/people_pad"
        app:layout_constraintTop_toBottomOf="@id/people3" />

    <androidx.constraintlayout.utils.widget.ImageFilterButton
        android:id="@+id/people6"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/ic_settings_black_24dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toTopOf="@id/people8"
        app:layout_constraintEnd_toEndOf="@id/people_pad"
        app:layout_constraintStart_toEndOf="@id/people5"
        app:layout_constraintTop_toBottomOf="@id/people4" />

    <androidx.constraintlayout.utils.widget.ImageFilterButton
        android:id="@+id/people7"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginStart="8dp"
        android:src="@drawable/ic_settings_black_24dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="@id/people_pad"
        app:layout_constraintEnd_toStartOf="@id/people8"
        app:layout_constraintStart_toStartOf="@id/people_pad"
        app:layout_constraintTop_toBottomOf="@id/people5" />

    <androidx.constraintlayout.utils.widget.ImageFilterButton
        android:id="@+id/people8"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/ic_settings_black_24dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="@id/people_pad"
        app:layout_constraintEnd_toEndOf="@id/people_pad"
        app:layout_constraintStart_toEndOf="@id/people7"
        app:layout_constraintTop_toBottomOf="@id/people6" />

</androidx.constraintlayout.motion.widget.MotionLayout>