<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    style="@style/Theme.AppCompat.DayNight">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                style="@style/Theme.AppCompat.DayNight"
                android:layout_width="wrap_content"
                android:layout_height="69dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/logo_notification" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvBannerAlarmActive"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:textSize="13sp"
                    android:text="testtesttesttest"
                    style="@style/Theme.AppCompat.DayNight"/>

                <TextView
                    android:id="@+id/tvBannerActualWakeup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:textSize="13sp"
                    android:text="testtesttesttest"
                    style="@style/Theme.AppCompat.DayNight"/>

                <TextView
                    android:id="@+id/tvBannerActualSleeptime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:textSize="13sp"
                    android:text="testtesttesttest"
                    style="@style/Theme.AppCompat.DayNight"/>

                <TextView
                    android:id="@+id/tvBannerDetailedSleeptime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:textSize="13sp"
                    android:text="testtesttesttest"
                    style="@style/Theme.AppCompat.DayNight"/>

                <TextView
                    android:id="@+id/tvBannerIsSleeping"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:textSize="13sp"
                    android:text="Rem: 1h 2min, Light: 3h 20min, Deep: 4h, 22min"
                    style="@style/Theme.AppCompat.DayNight"/>

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp"
            style="@style/Theme.AppCompat.DayNight">

            <Button
                android:id="@+id/btnDisableAlarmNotification"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="2dp"
                android:background="@drawable/rounded_button_green"
                style="@style/Theme.AppCompat.DayNight"
                android:layout_gravity="bottom"
                android:textSize="16sp"/>

            <Button
                android:id="@+id/btnNotSleepingNotification"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="2dp"
                android:background="@drawable/rounded_button_green"
                style="@style/Theme.AppCompat.DayNight"
                android:layout_gravity="bottom"
                android:textSize="15sp"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>