<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:orientation="horizontal"
    style="@style/Theme.AppCompat.DayNight">


    <ImageView
        android:layout_gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/logo_notification"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvTextAlarm"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                style="@style/Theme.AppCompat.DayNight"/>

            <ProgressBar
                android:id="@+id/pbSleepProgressNotification"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="6dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="3dp"
                android:progressTint="#00BCD4" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnDisableAlarmNotification"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="2dp"
                android:background="@drawable/rounded_button_green"
                style="@style/Theme.AppCompat.DayNight"
                android:layout_gravity="bottom"
                android:textSize="15sp"/>

            <Button
                android:id="@+id/btnNotSleepingNotification"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="2dp"
                android:background="@drawable/rounded_button_green"
                style="@style/Theme.AppCompat.DayNight"
                android:layout_gravity="bottom"
                android:textSize="15sp"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>